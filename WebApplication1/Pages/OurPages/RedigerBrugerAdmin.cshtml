@page
@model WebApplication1.Pages.OurPages.RedigerBrugerAdminModel
@{
}

<body>
    <style>
        .error-message {
            color: red;
        }
    </style>
    <form method="post">
        <section class="h-100 h-custom gradient-custom-2">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12">
                        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                            <div class="card-body p-0">
                                <div class="row g-0">

                                    <div class="col-lg-6 bg-indigo text-dark">
                                        <div class="p-5">
                                            <h3 class="fw-normal mb-5">Ændre kode</h3>
                                                <div style="float: left; width:50%;">

                                            <div class="col-md-7 mb-4 pb-2">

                                                <div class="form-outline form-group form-white">
                                                    <label asp-for="Navn" class="control-label"></label>
                                                    <input asp-for="Navn" class="form-control" required />
                                                    <span asp-validation-for="Navn" class="text-danger"></span>

                                                </div>

                                            </div>

                                            <div class="col-md-7 mb-4 pb-2">

                                                <div class="form-outline form-group form-white">
                                                    <label asp-for="Kodeord" class="control-label"></label>
                                                    <input asp-for="Kodeord" type="password" class="form-control" required />
                                                    <span asp-validation-for="Kodeord" class="text-danger"></span>

                                                </div>

                                            </div>


                                            <div class="col-md-7 mb-4 pb-2">

                                                <div class="form-outline form-group form-white">
                                                    <label asp-for="GentagKodeord" class="control-label">Gentag Kodeord</label>
                                                    <input asp-for="GentagKodeord" type="password" class="form-control" required />
                                                    <span asp-validation-for="GentagKodeord" class="text-danger"></span>

                                                </div>

                                            </div>
                                            </div>

                                            <div style="float: right; width:50%;">
                                                <br />
                                                <div class="form-outline form-group form-white">
                                                    <select name="Rolle">
                                                        <option value="10">Vælg en Rolle</option>
                                                        @foreach (Models.BrugerRolle Rolle in Model.alleBrugerRoller)
                                                        {
                                                            <option value="@Rolle.Id">@Rolle.RolleNavn</option>
                                                        }
                                                    </select>
                                                </div>
                                                <br />
                                                <div class="form-outline form-group form-white">

                                                    <select name="SkoleId">
                                                        <option value="10">Vælg en skole</option>
                                                        @foreach (Models.Skole Skole in Model.AlleSkoler)
                                                        {
                                                            <option value="@Skole.Id">@Skole.Location</option>
                                                        }
                                                    </select>
                                                </div>
                                                <br />
                                                <div class="form-outline form-group form-white">
                                                    <label asp-for="SletningsDato" class="control-label"></label>
                                                    <input asp-for="SletningsDato" type="date" class="form-control" />
                                                    <span asp-validation-for="SletningsDato" class="text-danger"></span>

                                                </div>
                                                <br>
                                            <form method="post">
                                            <input type="submit" class="btn btn-info btn-lg btn-block" name="Ændring af bruger" />
                                                </form>
                                            @if (!string.IsNullOrEmpty(Model.Message))
                                            {
                                                <li class="nav-item error-message">@Model.Message</li>

                                            }
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>