@page
@model WebApplication1.Pages.OurPages.AendreBookingModel
@{
}
<h1>Ændre booking af lokale @Model.LokaleNummer på dagen @Model.Dato</h1>

<div>
    <form method="post">
        <p>Min booking starter:</p>
        <p><input asp-for="StartTidHour" />:<input asp-for="StartTidMin" /></p>
        <p>Min booking varer:</p>
        <p><input asp-for="EndTidHour" />timer og <input asp-for="EndTidMin" /> minutter</p>
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p>@Model.Message</p>
        }
        <input class="btn btn-warning" type="submit" asp-route-bookingId="@Model.BookingId" value="Færdiggør ændring" />
    </form>
</div>