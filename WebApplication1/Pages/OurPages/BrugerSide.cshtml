@page
@model WebApplication1.Pages.OurPages.BrugerSideModel
@{
}
@* @WebApplication1.Services.LoginManager.LoggedInUser.Email *@


<head>
<style>
h2 {
  text-align: center;
}
</style>
</head>
<body>

    <h2> Velkommen @WebApplication1.Services.LoginManager.LoggedInUser.Navn!</h2>

</body>

<br/>
<head>
    <style>
        table, th, td {
            border: 1px solid;
            margin-left: auto;
            margin-right: auto;
        }

        .TableContainer div{
            width: 35%;
            float: inline-start;
        }

        .ButtonContainer div{

            position: fixed;
            bottom: 20%
        }
    </style>
</head>

<body>
  <div class="TableContainer">
     <div>
         <table>
            <tr>
              <th>E-mail</th>
                   <td>@WebApplication1.Services.LoginManager.LoggedInUser.Email</td>
            </tr>
              <tr>
              <th>Rolle</th>
                   <td>@WebApplication1.Services.LoginManager.LoggedInUser.Rolle.RolleNavn</td>
            </tr>
             <tr>
               <th>Skole</th>
                    @{string skole = new WebApplication1.Services.SkoleService().Read(WebApplication1.Services.LoginManager.LoggedInUser.SkoleId).Location;
                <td>@skole</td>
            }
            </tr>
          </table>
     </div>
        <div>
    <table>
        <tr>
            <th>Mine Bookinger</th>
        </tr>
        @foreach (var booking in new WebApplication1.Services.BookingService().ReadAll($"BrugerEmail='{WebApplication1.Services.LoginManager.LoggedInUser.Email}'"))
        {
            <tr>
                <td>@booking.LokaleId</td>
                <td>@booking.Dato</td>
                <td>@booking.BookingType.Type</td>
                <th>
                    <form method="post" asp-page-handler="DeleteBooking" asp-route-bookingId="@booking.Id">
                        <button type="submit">Delete</button>
                    </form>
                </th>
            </tr>
        }
    </table>
       </div>
    </div>
</body>
<br />
<div class="ButtonContainer">

    <div>
               @if (LogInModel.LoggedInBruger.Rolle.RolleNavn == "studerende")
               {
                <form action="Booking">
                    <input class="btn btn-primary" type="submit" role="button" value="Book et lokale" />
                </form>
                <br />

                <p><a class="btn btn-primary" href="RedigerBruger" role="button">Ændre Adgangskode</a></p>

}
    </div>

    <div>
        @if(LogInModel.LoggedInBruger.Rolle.RolleNavn == "admin")
        {
            <p><a class="btn btn-primary" href="OpretBrugerKonto" role="button">Opret Bruger</a></p>

            <p><a class="btn btn-primary" href="OpretLokaler" role="button">Opret Lokaler</a></p>

            <p><a class="btn btn-primary" href="RedigerBruger" role="button">Ændre Adgangskode</a></p>

            <form action="Booking">
                <input class="btn btn-primary" type="submit" role="button" value="Book et lokale" />
            </form>
        }
    </div>

</div>