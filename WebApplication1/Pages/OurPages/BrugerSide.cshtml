    <p><a class="btn btn-primary" href="OpretLokaler" role="button">Opret Lokaler</a></p>
}

<p><a class="btn btn-primary" href="RedigerBruger" role="button">Rediger Bruger</a></p>



<script>
    function bekræftSletBruger() {
        if (confirm("Er du sikker på, at du vil slette din konto?")) {
            document.getElementById("deleteUserForm").submit();
        }
    }
</script>
<head>
    <style>
        body {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<form action="Booking">
        <input class="btn btn-primary" type="submit" role="button" value="Book et lokale" />
</form>

<form id="deleteUserForm" method="post" asp-page-handler="SletBruger" asp-route-email="@WebApplication1.Services.LoginManager.LoggedInUser.Email">
    <button type="button" class="btn btn-primary" onclick="bekræftSletBruger()">Slet Bruger</button>
</form>